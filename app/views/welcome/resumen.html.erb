<link rel="stylesheet" href="http://asdra.org.ar/wp-content/plugins/the-events-calendar/resources/events.css?ver=3.9.1">
<link rel="stylesheet" href="http://demo.cnanney.com/apple-counter-revisited/css/demo.css">
<link rel="stylesheet" href="http://demo.cnanney.com/apple-counter-revisited/css/counter.css">


<div class="contenido-tab pure-form pure-form-stacked" >
  <div class="col-izquierda">


  <fieldset>
    <legend>Ultimas Novedades

      <a href="/welcome/mensajes_novedades_rss">
        <img src="https://cdn0.iconfinder.com/data/icons/small-n-flat/24/678060-rss-20.png" alt="Novedades RSS" title="Suscribir a las novedades RSS"/>
      </a>
    </legend>


    <ul class="upcoming">

      <% if @mensajes_novedades.count == 0 %>
          <article class="n3t-event">
            <div class="n3t-event-date">
              <div class="n3t-event-month">
                <%= I18n.t("date.abbr_month_names")[DateTime.now.month] %></div>
              <div class="my-n3t-event-day" id="day_number"><%= DateTime.now.day %></div>
            </div>
            <div class="n3t-event-content" >
              <%= DateTime.now.strftime("%H:%M:%S") %>
              <br>
              <div style="font-size: large">
                Nadie publicó novedades aún! <img src="assets/smiley_bad.png">
              </div>
            </div>
          </article>
      <%end%>

      <% @mensajes_novedades.each do |mensaje_novedad| %>
          <article class="n3t-event">
            <div class="n3t-event-date">
              <div class="n3t-event-month">
                <%= I18n.t("date.abbr_month_names")[DateTime.parse(mensaje_novedad.fecha).month] %></div>
              <div class="my-n3t-event-day" id="day_number"><%= DateTime.parse(mensaje_novedad.fecha).day %></div>
            </div>
            <div class="n3t-event-content" >
              <%= DateTime.parse(mensaje_novedad.fecha).strftime("%H:%M:%S") %>
              <br>
              <div style="font-size: large">
                <%= mensaje_novedad.mensaje %>
              </div>
            </div>
          </article>
      <% end %>

    </ul>

  </fieldset>
  </div>
<div class="col-derecha">

  <fieldset>

    <legend>Estadísticas
        <img src="/assets/statistics.png" width="20px" height="20px" alt="Estadísticas"/>
    </legend>

    <div id="cantidad_entrevistas"  class="flip-counter" style="display: block">
        Cantidad de Entrevistas
    </div>
    <div id="cantidad_padres_escuchan"  class="flip-counter" style="display: block">
        Cantidad de Padres que Escuchan
    </div>
    <div id="cantidad_madres_escuchan"  class="flip-counter" style="display: block">
      Cantidad de Madres que Escuchan
    </div>
  </fieldset>
</div>

</div>


<script type="text/javascript">
    $(document).ready(function() {
        var cantidad_entrevistas = new flipCounter("cantidad_entrevistas", {
            value: 0,
            inc: 1,
            pace: 30,
            auto: true
        });

        cantidad_entrevistas.incrementTo(<%= @cantidad_entrevistas %>);

        var cantidad_padres_escuchan = new flipCounter("cantidad_padres_escuchan", {
            value: 0,
            inc: 1,
            pace: 30,
            auto: true
        });

        cantidad_padres_escuchan.incrementTo(<%= @cantidad_padres_escuchan %>);


        var cantidad_madres_escuchan = new flipCounter("cantidad_madres_escuchan", {
            value: 0,
            inc: 1,
            pace: 30,
            auto: true
        });

        cantidad_madres_escuchan.incrementTo(<%= @cantidad_madres_escuchan %>);
    });

</script>