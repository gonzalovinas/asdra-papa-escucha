drop table entrevistas;
drop table configuracion;
drop table mantenimientos;
drop table mensajes_novedades;
drop table padres_escuchan;

CREATE TABLE entrevistas
(
  r_id INTEGER PRIMARY KEY,
  fecha_llamada TEXT NOT NULL,
  fecha_entrevista TEXT NOT NULL,
  lugar TEXT NOT NULL,
  id_mama_escucha INTEGER,
  id_papa_escucha INTEGER,
  como_supo TEXT NOT NULL,
  papa_nombre_apellido TEXT NOT NULL,
  papa_edad TEXT NOT NULL,
  papa_ocupacion TEXT NOT NULL,
  papa_domicilio TEXT NOT NULL,
  papa_telefonos TEXT NOT NULL,
  papa_correo TEXT NOT NULL,
  mama_nombre_apellido TEXT NOT NULL,
  mama_edad TEXT NOT NULL,
  mama_ocupacion TEXT NOT NULL,
  mama_domicilio TEXT NOT NULL,
  mama_telefonos TEXT NOT NULL,
  mama_correo TEXT NOT NULL,
  sexo TEXT NOT NULL,
  fecha_nacimiento TEXT NOT NULL,
  institucion_nacimiento TEXT NOT NULL,
  observacion_institucion TEXT NOT NULL,
  meses_nacimiento INTEGER NOT NULL,
  parto_normal TEXT NOT NULL,
  sabia_sdown TEXT NOT NULL,
  recepcion_flia TEXT NOT NULL,
  patologia_agregada TEXT NOT NULL,
  observaciones TEXT NOT NULL,
   vigente TEXT NULL
);
CREATE TABLE mensajes_novedades
(
    r_id INTEGER PRIMARY KEY ,
    fecha TEXT NOT NULL,
    mensaje TEXT NOT NULL
);
create table padres_escuchan (
  r_id INTEGER PRIMARY KEY,
  apellidos TEXT NOT NULL,
  nombres TEXT NOT NULL,
  correo TEXT NOT NULL,
  tipo TEXT NOT NULL,
  vigente TEXT NULL
);
create table configuracion (
  r_id int primary key,
  modulo text,
  clave text,
  valor text
);

create table mantenimientos (
r_id int primary key,
plan text,
descripcion_corta text,
descripcion_larga text);

delete from mensajes_novedades;
delete from mantenimientos;
delete from padres_escuchan;
delete from configuracion;
delete from entrevistas;

