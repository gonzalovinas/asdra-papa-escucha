</form>

<script>

    function enviar_formulario(sender) {


        $("#alta_nueva_entrevista").validate();

        if(!$("#alta_nueva_entrevista").valid()) return;

        var postData = $("#alta_nueva_entrevista").serializeArray();
        var formURL = "entrevista/alta_nueva_entrevista";

            $.ajax({
                url : formURL,
                type: "POST",
                data : postData,
                //contentType:"application/json; charset=utf-8",
                // dataType:"json",
                success:function(data, textStatus, jqXHR) {
                    if(data.status==="OK") {
                        $("#modal_entrevista_alta_exitosa").dialog({
                            modal: true,
                            buttons: {
                                Ok: function () {
                                    $(this).dialog("close");
                                }
                            }
                        });
                    }
                    else {
                        mostrar_error_tecnico();
                    }
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    mostrar_error_tecnico();
                }
            });
    }


    $("#alta_nueva_entrevista").validate({
        invalidHandler: function(event, validator) {
            $("#modal_entrevista_alta_fallida_revisar_campos_obligatorios").dialog({
                        modal: true,
                        buttons: {
                            Ok: function () {
                                $(this).dialog("close");
                            }
                        }
                    }
            );
        },
        submitHandler: function() {
            alert('valido');
        },
        rules: {
            "fecha_llamada"     : { required: true },
            "fecha_entrevista"  : { required: true },
            "lugar"             : { required: true },
            "mama_escucha"      : { required: true },
            "papa_escucha"      : { required: true },
            "como_supo"         : { required: true },
            "papa_nombre_apellido" : { required: true },
            "papa_edad"         : { required: true },
            "papa_ocupacion"    : { required: true },
            "papa_domicilio"    : { required: true },
            "papa_telefonos"    : { required: true },
            "papa_corre"        : { required: true }
        }
    });

    $.validator.messages.required = 'Este campo es de carga obligatoria.';

    $.datepicker.regional['nl'] = {clearText: 'Effacer', clearStatus: '',
        closeText: 'sluiten', closeStatus: 'Onveranderd sluiten ',
        prevText: 'anterior', prevStatus: 'Zie de vorige maand',
        nextText: 'siguiente', nextStatus: 'Zie de volgende maand',
        currentText: 'Huidige', currentStatus: 'Bekijk de huidige maand',
        monthNames: ['enero','febrero','marzo','abril','mayo','junio',
            'julio','augosto','septiembre','octubre','noviembre','diciembre'],
        monthNamesShort: ['ene','feb','mar','abr','may','jun',
            'jul','aug','sep','oct','nov','dec'],
        weekHeader: 'Sm', weekStatus: '',
        dayNames: ['domingo','lunes','martes','miércoles','jueves','sabado','domingo'],
        dayNamesShort: ['do', 'lu','ma','mi','ju','vi','sa'],
        dayNamesMin: ['do', 'lu','ma','mi','ju','vi','sa'],
        dayStatus: 'Gebruik DD als de eerste dag van de week', dateStatus: 'Kies DD, MM d',
        dateFormat: 'dd/mm/yy', firstDay: 1,
        initStatus: 'Kies een datum', isRTL: false};

    $.datepicker.setDefaults($.datepicker.regional['nl']);


    $(function() {
        $( '#fecha_llamada' ).datepicker({ dateFormat: 'dd-mm-yy' });
        $( '#fecha_entrevista' ).datepicker({ dateFormat: 'dd-mm-yy' });
        $( '#fecha_nacimiento' ).datepicker({ dateFormat: 'dd-mm-yy' });
        $( '#meses_nacimiento' ).spinner({
            max: 9,
            min: 5
        });
    });
</script>

<div id="modal_entrevista_alta_exitosa" title="Mensaje" style="display:none;">
  La entrevista ha sido dada de alta en forma exitosa!
</div>


  <div id="modal_entrevista_alta_fallida_revisar_campos_obligatorios" title="Mensaje" style="display:none;">
    La entrevista no puede ser dada de alta porque algunos campos son obligatorios y no fueron completados, revise estos y luego vuelva a aceptar.
  </div>

</div>
